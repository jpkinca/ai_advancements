# AI Trading Advancements Environment Configuration
# Copy this to your .env file and customize as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection URL (use your Railway or local database)
DATABASE_URL=postgresql://username:password@host:port/database
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# IBKR CONFIGURATION
# =============================================================================
# Interactive Brokers connection settings
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_TIMEOUT=10

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# Training parameters
AI_VALIDATION_SPLIT=0.2
AI_TEST_SPLIT=0.1
AI_RANDOM_SEED=42
AI_BATCH_SIZE=32
AI_EPOCHS=100
AI_LEARNING_RATE=0.001

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk management settings
MAX_POSITION_SIZE=10000.00
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.04
RISK_PER_TRADE=0.01
MAX_DAILY_TRADES=10

# Trading hours (ET)
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00
TRADING_TIMEZONE=America/New_York

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable system features
ENABLE_RL=true
ENABLE_SENTIMENT=false
ENABLE_GENETIC=false
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false

# Auto-initialize on import
AI_TRADING_AUTO_INIT=false

# =============================================================================
# API KEYS (Optional)
# =============================================================================
# Alpha Vantage (for additional market data)
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Twitter API (for sentiment analysis)
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Reddit API (for sentiment analysis)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=AITradingBot/1.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=ai_advancements.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development and testing flags
DEBUG_MODE=false
CACHE_ENABLED=true
ENABLE_PROFILING=false

# Testing settings
TEST_MODE=false
USE_SYNTHETIC_DATA=false
MOCK_IBKR_CONNECTION=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Threading and async settings
MAX_WORKERS=4
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=10
RETRY_ATTEMPTS=3

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace placeholder values with your actual configuration
# 2. Keep API keys secure and never commit them to version control
# 3. Use different settings for development, staging, and production
# 4. Enable features gradually as you implement them
# 5. Monitor resource usage when increasing MAX_WORKERS or BATCH_SIZE
